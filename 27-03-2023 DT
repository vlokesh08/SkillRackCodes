s=input().strip()
n=len(s)//3
k=s
m=1
ind=0
print('-'*(n),end="")
print(s[0])
for i in range(1,n):
    print('-'*(n-i),end="")
    print(s[-i],end="")
    print('-'*(m),end="")
    print(s[i],end="")
    print()
    m+=2
    ind+=1
for i in range(len(s)-ind-1,ind,-1):
    print(s[i],end="")
    if i!=ind+1:
        print('-',end="")

    
    
